@model List<UserListModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
  

    <table class="mt-4 table table-hover table-bordered table-responsive-md ">
       
        <thead>
            <tr>
                <th colspan="4">All users registered in the system</th>
            </tr>
            <tr>
                
                <th>Name</th>
                <th>Last Name</th>
                <th>Account Count</th>
                <th>
                    <button type="button" class="btn btn-dark btn-sm">
                        <a asp-action="Create" asp-controller="User"  class="text-decoration-none text-white">Add User</a>
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Lastname</td>
                    <td><getAccountCount user-id="@item.Id"></getAccountCount></td>
                    <td>
                        <button type="button" class="btn btn-dark btn-sm ">
                            <a asp-action="Create" asp-controller="Account" asp-route-id="@item.Id" class="text-decoration-none text-white">Create New Account</a>
                            </button>
                        <button type="button" class="btn btn-dark btn-sm">
                        <a asp-action="GetByUserId" asp-controller="Account" asp-route-userId="@item.Id" class="text-decoration-none text-white">Show Details</a>
                        </button>
                      
                    </td>
                </tr>

            }

        </tbody>
    </table>

</div>
