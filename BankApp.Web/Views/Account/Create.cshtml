@model UserListModel

@{
    Random rnd = new Random();
}

<div class="container">
    <div class="row">
        
        <div class="col-6 ">
            <h3>User Info</h3>
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-title"> <b>User name:</b> @Model.Name</p>
                    <p class="card-title"> <b>User lastname:</b> @Model.Lastname</p>
                    <p class="card-text "><b>User account count:</b> @Model.Id</p>
                    <a asp-action="Remove" asp-controller="User" asp-route-userId="@Model.Id" class="btn btn btn-danger">Remove User</a>
                </div>
            </div>

        </div>


        <div class="col-6">
            <h3>Account Details</h3>
            <form method="post" asp-action="Create" asp-controller="Account">
                <input type="hidden" name="UserId" value="@Model.Id" />
                <div class="mb-3">
                    <label class="form-label">Account Number</label>
                    <input type="number" class="form-control" name="AccountNumber" value=@rnd.Next() />

                </div>
                <div class="mb-3">
                    <label class="form-label">Balance</label>

                    <input type="number" class="form-control" name="Balance" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>
