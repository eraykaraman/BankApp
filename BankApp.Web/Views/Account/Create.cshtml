@model UserListModel

@{
    Random rnd = new Random();
    Console.WriteLine(rnd);
}

<div class="container">
    <div class="row mt-5">
        <h3>Account Info</h3>
        <div class="col-6 mt-3">
            <p><b>User name:</b> @Model.Name</p>
            <p><b>User lastname:</b> @Model.Lastname</p>
            <p><b>User account count:</b> <getAccountCount application-user-id="@Model.Id"></getAccountCount></p>
        </div>
        <div class="col-6">
            <form method="post" asp-action="Create" asp-controller="Account">
                <input type="hidden" name="UserId" value="@Model.Id" />
                <div class="mb-3">
                    <label class="form-label">Account Number</label>
                    <input type="number" class="form-control" name="AccountNumber" value=@rnd.Next() />

                </div>
                <div class="mb-3">
                    <label class="form-label">Balance</label>

                    <input type="number" class="form-control" name="Balance" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>
