@model List<AccountListModel>

<div class="container">

    <div class="row">
        <div class="col-6 ">
            
           
                
              
                
            <h3>User Info</h3>
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-title"> <b>User name:</b> @ViewBag.Name</p>
                    <p class="card-title"> <b>User lastname:</b> @ViewBag.LastName</p>
                    <p class="card-text"><b>User account count:</b> @Model.Count</p>
                    <a asp-action="Remove" asp-controller="User" asp-route-userId="@ViewBag.Id" class="btn btn btn-danger">Remove User</a>
                </div>
            </div>
          

        </div>

        <div class="col-6 ">
            <h3>User Accounts</h3>
            @if (Model.Count > 0)
            {
                @foreach (var account in Model)
                {
                    <div class="card mb-4">
                       
                        <div class="card-body">
                            <p class="card-title"> <b>Account Number:</b> @account.AccountNumber</p>
                            <p class="card-text"> <b>Balance:</b> @account.Balance</p>
                            <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@account.Id" class="btn btn-primary">Send Money</a>
                            <a asp-action="Remove" asp-controller="User" asp-route-userId="@account.Id" class="btn btn-danger">Remove Account</a>
                        </div>
                    </div>
                }

                
            }else
            {
                <div class="alert alert-danger" role="alert" >

                    <p class="lead"> User account not found</p>
                
                </div>
            }
          
           
        </div>
    </div>

</div>